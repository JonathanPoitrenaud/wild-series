{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <div class="container text-center">
        <h1>Actor</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            </tbody>
        </table>
        {% for program in actor.programs %}
            <a href="{{ path('program_show', {slug: program.slug}) }}">{{ program.title }}</a>
        {% else %}
            error
        {% endfor %}

        <a href="{{ path('actor_index') }}">back to list</a>

        <a href="{{ path('actor_edit', {actor: actor.id}) }}">edit</a>

        {{ include('actor/_delete_form.html.twig') }}
    </div>
{% endblock %}
