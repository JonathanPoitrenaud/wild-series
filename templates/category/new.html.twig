{% extends 'base.html.twig' %}

{% block title %}Create new category{% endblock %}

{% block body %}
    <div class="container text-center">
        <div class="mt-5">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="mt-3">Add category</button>
            {{ form_end(form) }}
        </div>
        <div>
            <a href="{{ path('category_index') }}">Back to categories</a>
        </div>
    </div>
{% endblock %}